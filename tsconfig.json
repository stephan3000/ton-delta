{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "jest",
            "@ton/test-utils"
        ]
    },
    "include": [
        "tests/*.ts",
        "wrappers/*.ts",
        "build/**/*.ts"
    ]
}